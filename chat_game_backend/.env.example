#.env.example
# === LLM / OpenAI (Groq) Config ===
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=llama3-8b-8192
OPENAI_API_BASE=https://api.groq.com/openai/v1
OPENAI_TEMPERATURE=0.8

# === FastAPI / JWT Config ===
SECRET_KEY=your-flask-secret
JWT_SECRET_KEY=super-secret-jwt
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600  # in seconds (1 hour)

# === Guest Login & Admin ===
GUEST_USERNAME_PREFIX=guest_
GUEST_ID_LENGTH=6
ADMIN_USERNAME=admin

# === Leaderboard ===
MAX_LEADERBOARD_ENTRIES=10

# === PostgreSQL DB ===
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/chat_game_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_DB=chat_game_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

